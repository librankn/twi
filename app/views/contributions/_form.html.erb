<%= form_with(model: @contribution, local: true, url: choose_new_or_edit) do |form| %>
  <% if @contribution.errors.any? %>
    <div id="error_explanation">
      <% @contribution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contribution_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
<br>
<%= link_to "ツイート一覧画面にもどる", contributions_path %>